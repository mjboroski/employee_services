<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>

<div class="left">

  <div class="info">
    <div class="greeting">
      <%= render partial: 'greeting' %>
    </div>
    <p class="edit_account"><%= link_to 'Edit Account', edit_user_path(@user), :class => "load_user_form" %></p>
    <%= render 'form' %>
  </div>
  <p><%= link_to 'My Benefits', user_benefits_path(@user) %></p>
</div>
