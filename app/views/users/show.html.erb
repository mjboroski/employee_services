<p id="notice"><%= notice %></p>

<% if @message %>
  <div class="center alert">
    <p><%= @message %></p>
  </div>
<% end %>

<div class="left">

  <div class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
    <p><strong>Welcome, </strong> <%= @user.name %>!</p>
    <p><%= link_to 'Edit Account', edit_user_path(@user) %></p>
    <p><%= link_to 'My Benefits', user_benefits_path(@user) %></p>
  </div>
</div>
